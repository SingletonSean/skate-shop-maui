<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SkateShop.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:SkateShop.Maui.Views"
    Shell.NavBarIsVisible="False">

    <ShellContent
        Title="Products"
        ContentTemplate="{DataTemplate views:ProductView}"
        Route="ProductView" />

    <ShellContent
        Title="Cart"
        ContentTemplate="{DataTemplate views:CartView}"
        Route="CartView" />

</Shell>
